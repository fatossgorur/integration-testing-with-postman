							"}else if(requestKey===\"cityName\" && requestValue ===\"van\") {\r",
							"    pm.expect(responseKey).to.eql(requestKey);\r",
							"    pm.expect(responseValue).to.eql(requestValue); \r",
							"    pm.expect(responseStatus).to.eql(\"Not Found\");\r",
							"    pm.expect(responseCode).to.eql(404);\r",
							"    pm.expect(responseBody).to.contain(\"Not Found\");\r",
							"}else if(requestKey===\"cityName\" && requestValue ===\"\") {\r",
